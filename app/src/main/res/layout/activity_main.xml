<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
    <TextView
        android:id="@+id/text_app_description"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:textSize="40px"
        android:text="@string/app_desc"/>

    <EditText android:id="@+id/edit_target"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/description_target"
        android:maxLength="12" />

    <EditText android:id="@+id/edit_desc"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:hint="@string/description_desc"
        android:maxLength="128"
        />
        <EditText android:id="@+id/edit_from"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/description_from"
            android:maxLength="12" />
        <TextView  android:id="@+id/theurl"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:linksClickable="true"
            android:textSize="50px"
            android:text="Web site"/>
        <Button
            android:id="@+id/ok"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="OK" />

    </LinearLayout>

</RelativeLayout>
